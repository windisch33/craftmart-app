# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=craftmart
DB_USER=craftmart_user
DB_PASSWORD=your_secure_password

# Application
PORT=3001
FRONTEND_PORT=3000
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# File upload paths
UPLOAD_PATH=./uploads

# Cloudflare Tunnel
# Get this token from Cloudflare Zero Trust Dashboard -> Networks -> Tunnels
TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Rate limiting (optional)
# Number of attempts allowed in the window (default 5)
# RATE_LIMIT_MAX=5
# Window duration in ms (default 900000 = 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000
# Disable login rate limiting for testing/staging
# Set to true to bypass the limiter on /api/auth/login
DISABLE_LOGIN_RATE_LIMIT=true
