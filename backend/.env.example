# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=craftmart
DB_USER=craftmart_user
DB_PASSWORD=your_secure_password

# JWT Configuration
# IMPORTANT: Use a secure, random string of at least 32 characters in production
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long

# File Upload Path
UPLOAD_PATH=./uploads

# PDF Cache Directory
# Uses system temp directory by default for safety
# Customize for production: /var/cache/craftmart-pdf
PDF_CACHE_DIR=/tmp/craftmart-pdf-cache

# CORS Configuration
# For development (single origin): http://localhost:3000  
# For development (multiple origins): http://localhost:3000,http://127.0.0.1:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting Configuration
# Maximum number of login attempts per IP per window (default: 5)
RATE_LIMIT_MAX=5
# Rate limit window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Disable login rate limiting during testing/staging
# Set to 'true' in non-production to bypass login rate limiter
DISABLE_LOGIN_RATE_LIMIT=true
